<h1>Restaurants</h1>

<div id="restaurants">
  <% @restaurants.each do |restaurant| %>
    <%= restaurant.name %>
    <p>
      <%= link_to "Show this restaurant", restaurant_path %>
    </p>
    <%= restaurant.adress %>
    <%= restaurant.phone_number %>
    <%= restaurant.rating %>
  <% end %>
</div>

